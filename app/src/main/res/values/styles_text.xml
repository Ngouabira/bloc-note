<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">robotoRegular</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
    </style>


    <!-- Typography style -->

    <style name="TextViewAppearance.Base" parent="@style/TextViewAppearance">
        <item name="typeface">robotoThin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewAppearance.Title" parent="@style/TextViewAppearance">
        <item name="typeface">robotoRegular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewAppearance.SousTitle" parent="@style/TextViewAppearance">
        <item name="typeface">robotoThin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextViewAppearance.Info" parent="@style/TextViewAppearance">
        <item name="typeface">robotoThinItalic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>